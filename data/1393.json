    "ingredients": [
        {
            "@language": "en-US",
            "@value": "2 tablespoons lemon juice"
        },
        {
            "@language": "en-US",
            "@value": "\u00bd teaspoon dried tarragon"
        },
        {
            "@language": "en-US",
            "@value": "\u00bd pound tomatoes, diced"
        },
        {
            "@language": "en-US",
            "@value": "Red pepper flakes, optional"
        },
        {
            "@language": "en-US",
            "@value": "Lemon zest"
        },
        {
            "@language": "en-US",
            "@value": "\u00bc cup olive oil"
        },
        {
            "@language": "en-US",
            "@value": "\u00be pound spaghetti"
        },
        {
            "@language": "en-US",
            "@value": "Salt and freshly ground pepper to taste"
        },
        {
            "@language": "en-US",
            "@value": "4 scallions, white and green tops, sliced"
        },
        {
            "@language": "en-US",
            "@value": "2 cloves garlic, minced"
        },
        {
            "@language": "en-US",
            "@value": "2 tablespoons fresh basil, chopped"
        },
        {
            "@language": "en-US",
            "@value": "2 pounds large shrimp, shelled"
        }
    ],
    "name": {
        "@language": "en-US",
        "@value": "Grilled Shrimp with Pasta"
    },
    "recipeCategory": {
        "@language": "en-US",
        "@value": "Main Dish"
    },
    "recipeInstructions": [
        {
            "@language": "en-US",
            "@value": "Remove oil from heat and allow to cool."
        },
        {
            "@language": "en-US",
            "@value": "Drain pasta and return to pot. Add remaining garlic/tarragon oil, tomatoes, scallions, lemon juice, lemon zest, salt and pepper and toss to combine. Top with chopped basil."
        },
        {
            "@language": "en-US",
            "@value": "Heat oil in small saucepan over low heat. Add tarragon and cook for 2 minutes. Add garlic and cook until fragrant, about 1 additional minute."
        },
        {
            "@language": "en-US",
            "@value": "Cook spaghetti in pot of boiling, salted water until al dente. About 10 minutes."
        },
        {
            "@language": "en-US",
            "@value": "Meanwhile, heat grill pan over high heat. Cook the shrimp, turning once, until shrimp turns pink and is just done, about 5 minutes."
        },
        {
            "@language": "en-US",
            "@value": "Serve the shrimp skewers on top of the pasta with lemon wedges on the side."
        },
        {
            "@language": "en-US",
            "@value": "Blot shrimp with paper towels to remove excess moisture and thread onto metal or wooden skewers. Brush shrimp with 1\u00bd tablespoons of the oil and season with salt, pepper and red pepper, if desired."
        }
    ],
    "recipeYield": {
        "@language": "en-US",
        "@value": "4"
    },
