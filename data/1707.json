    "recipeInstructions": [
        {
            "@language": "en-US",
            "@value": "Heat ghee in a non-stick pan and add paste of posto to it. Saute on low flame for 5 to 7 minutes."
        },
        {
            "@language": "en-US",
            "@value": "Make a paste of almonds as well."
        },
        {
            "@language": "en-US",
            "@value": "Drain water from posto and grind to a semi-thick paste. If required, add 1 tbsp milk."
        },
        {
            "@language": "en-US",
            "@value": "Add condensed milk and normal milk."
        },
        {
            "@language": "en-US",
            "@value": "Now add sugar to the mixture and saute until sugar dissolves completely."
        },
        {
            "@language": "en-US",
            "@value": "Add almond paste and saute for five more minutes."
        },
        {
            "@language": "en-US",
            "@value": "Cook until halwa turns to semi-solid consistency and stops sticking to the pan."
        },
        {
            "@language": "en-US",
            "@value": "Remove from flame and garnish Posto Badam Halwa with whole almonds. Serve hot."
        },
        {
            "@language": "en-US",
            "@value": "Soak posto and almonds separately in hot water for five hours or overnight."
        }
    ],
