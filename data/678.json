    "recipeInstructions": [
        {
            "@language": "en-US",
            "@value": "Add all ingredients (except baguette) into a food processor or high-powered blender and process/blend until smooth."
        },
        {
            "@language": "en-US",
            "@value": "Sprinkle with fresh parsley, if desired."
        },
        {
            "@language": "en-US",
            "@value": "Spread cashew cheese onto your baguette slices and broil for about 5 minutes, or until the edges of your bread are lightly browned. Watch them carefully so they don't burn!"
        },
        {
            "@language": "en-US",
            "@value": "Pre-heat your broiler."
        },
        {
            "@language": "en-US",
            "@value": "Transfer mixture to an air-tight container and refrigerate for at least 1 hour."
        }
