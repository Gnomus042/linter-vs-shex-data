    "recipeIngredient": [
        {
            "@language": "en-US",
            "@value": "\n                  \n                    1\n                  \n                  \n                    tablespoon Dijon mustard\n                  \n                "
        },
        {
            "@language": "en-US",
            "@value": "\n                  \n                    4\n                  \n                  \n                    large Granny Smith apples, peeled, cored and each cut into 8 wedges\n                  \n                "
