{
    "@type": "Recipe",
    "author": {
        "@language": "en-US",
        "@value": "Joan Donogh"
    },
    "description": {
        "@language": "en-US",
        "@value": "Shortbread crust with a lemon and a cheesecake layer."
    },
    "ingredients": [
        {
            "@language": "en-US",
            "@value": "1 cup white sugar"
        },
        {
            "@language": "en-US",
            "@value": "1\u00bd cups flour"
        },
        {
            "@language": "en-US",
            "@value": "\u00bd cup lemon juice"
        },
        {
            "@language": "en-US",
            "@value": "2 eggs"
        },
        {
            "@language": "en-US",
            "@value": "1 tablespoon grated lemon rind"
        },
        {
            "@language": "en-US",
            "@value": "\u00bd cup icing (confectioners') sugar"
        },
        {
            "@language": "en-US",
            "@value": "2 tablespoons flour"
        },
        {
            "@language": "en-US",
            "@value": "1\u00bd cups white sugar"
        },
        {
            "@language": "en-US",
            "@value": "\u00be cup butter"
        },
        {
            "@language": "en-US",
            "@value": "4 eggs"
        },
        {
            "@language": "en-US",
            "@value": "2 packages (8 oz. each) cream cheese, softened"
        }
    ],
    "name": {
        "@language": "en-US",
        "@value": "Lemon Cheesecake Bars"
    },
    "recipeCategory": {
        "@language": "en-US",
        "@value": "Dessert"
    },
    "recipeCuisine": {
        "@language": "en-US",
        "@value": "American"
    },
    "recipeInstructions": [
        {
            "@language": "en-US",
            "@value": "Remove from oven and cool."
        },
        {
            "@language": "en-US",
            "@value": "Preheat oven to 350 degrees F."
        },
        {
            "@language": "en-US",
            "@value": "Bake until golden brown, about 15 minutes. Remove from oven."
        },
        {
            "@language": "en-US",
            "@value": "Cut butter into cubes. Turn food processor on and gradually add butter cubes. Process until mixture resembles coarse crumbs."
        },
        {
            "@language": "en-US",
            "@value": "Press mixture into bottom of a 9 x 13 pan."
        },
        {
            "@language": "en-US",
            "@value": "Reduce oven temperature to 300 degrees F."
        },
        {
            "@language": "en-US",
            "@value": "Pour mixture over baked crust. Bake for 15 minutes and remove from oven."
        },
        {
            "@language": "en-US",
            "@value": "In mixer bowl combine cream cheese and sugar and beat until smooth."
        },
        {
            "@language": "en-US",
            "@value": "They can be frozen."
        },
        {
            "@language": "en-US",
            "@value": "Bake for about 30 minutes, until filling is set."
        },
        {
            "@language": "en-US",
            "@value": "Put flour and sugar in food processor."
        },
        {
            "@language": "en-US",
            "@value": "In a bowl whisk together the eggs and sugar. Whisk in remaining ingredients.Pour over partially baked cheesecake layer."
        },
        {
            "@language": "en-US",
            "@value": "Sprinkle icing (confectioners) sugar over top if desired. Cut into bars and store in fridge."
        },
        {
            "@language": "en-US",
            "@value": "Add eggs and beat to combine."
        }
    ],
    "recipeYield": {
        "@language": "en-US",
        "@value": "24 bars"
    },
    "@id": "http://example.org/recipe"
}