    "name": {
        "@language": "de-DE",
        "@value": "Gorgonzolasauce mit Walnuss und Radicchio"
    },
    "recipeInstructions": [
        {
            "@language": "de-DE",
            "@value": "Mit Wein und Sahne abl\u00f6schen."
        },
        {
            "@language": "de-DE",
            "@value": "Nach Gusto frischen schwarzen Pfeffer dar\u00fcber geben."
        },
        {
            "@language": "de-DE",
            "@value": "Gorgonzola hinzugeben und schmelzen lassen."
        },
        {
            "@language": "de-DE",
            "@value": "Eigelbe glatt r\u00fchren und in die So\u00dfe einr\u00fchren."
        },
        {
            "@language": "de-DE",
            "@value": "Nicht mehr kochen. Mit Salz und Pfeffer abschmecken."
        },
        {
            "@language": "de-DE",
            "@value": "Die Waln\u00fcsse in einer neuen Pfanne mit dem Honig kurz aufkochen bis der Honig Blasen wirft."
        },
        {
            "@language": "de-DE",
            "@value": "Butter in einem Topf schmelzen."
        },
        {
            "@language": "de-DE",
            "@value": "Dann alles auf einem St\u00fcck Backpapier geben und abk\u00fchlen lassen."
        },
        {
            "@language": "de-DE",
            "@value": "Die Sauce \u00fcber die gew\u00fcnschten Nudeln geben und mit den kramellisierten Waln\u00fcssen und dem Radicchio garnieren."
        }
    ],
