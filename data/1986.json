    "recipeInstructions": [
        {
            "@language": "en-US",
            "@value": "Heat the oil in a heavy pot. Add onions, and all the whole spices cook until lightly golden."
        },
        {
            "@language": "en-US",
            "@value": "Cook on a very low heat until the lamb is almost tender (about 60 minutes)."
        },
        {
            "@language": "en-US",
            "@value": "Add the crushed tomatoes and curry leaves."
        },
        {
            "@language": "en-US",
            "@value": "Add all the ground spices and stir through for a few more minutes until fragrant."
        },
        {
            "@language": "en-US",
            "@value": "Check the seasoning, add salt if necessary."
        },
        {
            "@language": "en-US",
            "@value": "Add ginger and garlic and cook for a few minutes."
        },
        {
            "@language": "en-US",
            "@value": "Add the lamb, making sure to mix it properly with the onion mix. Braise for about 20 minutes, adding a bit of water at a time."
        },
        {
            "@language": "en-US",
            "@value": "Add more water as needed and add the potatoes and cook for approx another 30 minutes or until the lamb is completely tender."
        }
    ],
