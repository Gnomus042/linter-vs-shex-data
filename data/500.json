    "recipeInstructions": [
        {
            "@language": "it-IT",
            "@value": "Drain the ricotta with a strainer, set aside;"
        },
        {
            "@language": "it-IT",
            "@value": "Whisk the egg whites until stiff with 2-3 drops of lemon juice;"
        },
        {
            "@language": "it-IT",
            "@value": "Using a whisk cream the butter with the sugar and the orange zest;"
        },
        {
            "@language": "it-IT",
            "@value": "Preheat oven to 150 \u00b0, line a cake pan with parchment paper, set aside;"
        },
        {
            "@language": "it-IT",
            "@value": "Add the drained ricotta, almond flour, mix until you obtain a smooth batter;"
        },
        {
            "@language": "it-IT",
            "@value": "Add the egg yolks one at a time gently mixing;"
        },
        {
            "@language": "it-IT",
            "@value": "Add the egg whites in the ricotta mixture making big and delicate movements;"
        },
        {
            "@language": "it-IT",
            "@value": "Let cool for at least 1 hour before unfolding it, sprinkle with icing sugar and serve."
        },
        {
            "@language": "it-IT",
            "@value": "Pour the mixture into the mold, decorate with almond flakes and bake about 50 minutes;"
        }
    ],
